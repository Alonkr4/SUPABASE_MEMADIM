CREATE TABLE IF NOT EXISTS ak_analytics.urgency_tag_history (
    history_id          BIGSERIAL PRIMARY KEY,
    deal_id             TEXT NOT NULL,
    old_tag             TEXT,
    new_tag             TEXT NOT NULL,
    urgency_score       NUMERIC(10,2),
    changed_at          TIMESTAMPTZ DEFAULT NOW()
);

CREATE INDEX IF NOT EXISTS idx_uth_deal 
    ON ak_analytics.urgency_tag_history (deal_id, changed_at DESC);
